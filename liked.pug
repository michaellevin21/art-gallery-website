extends header

block content 

    for artwork in user.liked
        div
        p Title: #{artwork.Title}
        a(href=`location.href='/artists/${encodeURI(artwork.Artist)}'`) Artist: #{artwork.Artist}
        br
        p Year: #{artwork.Year}
        p Category: #{artwork.Category}
        p Medium: #{artwork.Medium}
        p Description: #{artwork.Description}
        img(src=artwork.Poster)
        br
        if artwork.Reviews.length == 0
            span Reviews: No Reviews
        else if user.reviewed.includes(artwork)
            span Reviews: #{artwork.Reviews}
            button(type='button', onclick=`location.href='/${artwork.Title}/reviews'`) Remove Review
        else 
            span Reviews: #{artwork.Reviews}
            button(type='button', onclick=`location.href='/${artwork.Title}/reviews'`) Add Review
        br
        span Likes: #{artwork.Likes}
        button(type='button', onclick=`location.href='/${artwork.Title}/likes'`) Remove Like