extends header

block content
    h2 Add Artwork
    form(action='/addArtwork',method='post')
        span Artwork Title:
        input(type='text',name='title',required) 
        br
        span Artwork Category:
        input(type='text',name='category',required) 
        br
        span Artwork Medium:
        input(type='text',name='medium',required) 
        br
        span Artwork Description
        input(type='text',name='description',required) 
        br
        span Link to Image
        input(type='text',name='poster',required) 
        br
        button(type='submit') Add Artwork
    
